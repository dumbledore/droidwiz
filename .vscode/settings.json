{
    "files.exclude": {
        "**/__pycache__": true,
        "**/._.DS_Store": true,
        ".venv/": true,
        "dist/": true
    },
    "[python]": {
        "editor.formatOnType": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.wordBasedSuggestions": "off"
    },
    "autopep8.args": [
        "--max-line-length=120"
    ]
}